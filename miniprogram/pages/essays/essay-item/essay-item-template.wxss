.essay-container {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-bottom: 5rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.essay-author-date {
  /* margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx; */
  margin: 10rpx 0 20rpx 10rpx;
}

.essay-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.essay-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.essay-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.essay-image {
  margin-left: 16px;
  width: 100%;
  height: 450rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.essay-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.essay-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.essay-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.essay-like-font {
  vertical-align: middle;
  margin-right: 20px;
}
