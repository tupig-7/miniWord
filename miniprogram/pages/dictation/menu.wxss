  margin-top: 10px;
  padding:10px;
  background-color:  #7fecad;
  font-family: Songti TC;
  font-size: 32rpx;
  color: #455a64;
  border-radius: 10rpx;
}

.body_head{
  padding: 10px;
}

.display_show{
  display: block;
  border: 1px solid #7fecad;
