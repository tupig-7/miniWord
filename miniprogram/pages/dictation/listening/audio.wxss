/* pages/audio/audio.wxss */


.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: 30%;
}

.control-div{
  display: flex;
  flex-direction: column;
  margin-top: 55%;
  position: absolute;
}

.title-view{
  display: flex;
  flex-direction: column;
  margin-top: 10%;
  align-content: center;
}

.button-miss {
  display: flex;
  flex-direction: column;
  width: 360rpx;
  height: 70rpx;
  background-color: #455A64;
  border: 2rpx solid #455A64;
  border-radius: 10rpx;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 37rpx;
  margin-left: 5%;
  margin-right: 10%;
}
.sound-title{
  margin-top: 50rpx;
  font-family: Songti TC;
  color: #455A64;
}
.word-miss {
  margin: auto;
  font-family: Songti TC;
  font-size: 25rpx;
  color: white;
}

.word-definition {
  margin-top: 20rpx;
  font-family: Yuanti TC;
  font-size: 30rpx;
  color: #585858;
}

.word-progress{
  margin-top: 20rpx;
  height: 5rpx;
  width: 500rpx;
}